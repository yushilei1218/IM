<?xml version="1.0" encoding="utf-8"?>
<com.jiechic.library.android.widget.MultiStateView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yushilei.im.ui.SignActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/activity_sign_psw"
            style="@style/Style_input"
            android:layout_centerInParent="true"
            android:hint="输入密码"
            android:inputType="numberPassword"
            android:maxLength="6" />

        <EditText
            android:id="@+id/activity_sign_psw_confirm"
            style="@style/Style_input"
            android:layout_below="@id/activity_sign_psw"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:hint="密码确认"
            android:inputType="numberPassword"
            android:maxLength="6" />

        <EditText
            android:id="@+id/activity_sign_psw_user"
            style="@style/Style_input"
            android:layout_above="@id/activity_sign_psw"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:hint="输入用户名"
            android:inputType="text" />

        <TextView
            android:id="@+id/activity_sign_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_sign_psw_confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/sign_in_input_shape"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="注册" />
    </RelativeLayout>

</com.jiechic.library.android.widget.MultiStateView>
